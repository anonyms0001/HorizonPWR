


<div class="row">
  <div class="col-sm-6">
    <h1>Product_types</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_product_type_path, class: 'btn btn-primary' do %>
    Add New Product type
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @product_types.each do |product_type| %>
        <%= content_tag :tr, id: dom_id(product_type), class: dom_class(product_type) do %>
          
            <td><%= link_to product_type.name, product_type %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
