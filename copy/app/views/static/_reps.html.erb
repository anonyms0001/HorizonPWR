<!-- This example requires Tailwind CSS v2.0+ -->
<div class="flex flex-col">
  <div class="my-2 overflow-x-auto">
    <div class="rounded-lg overflow-hidden shadow-lg bg-white">
      <div class="rounded-tl-lg rounded-tr-lg sm:rounded-tr-none relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-cyan-500">
        <table class="w-full">
          <thead>
          <tr>
            <th class="p-3 text-xs text-left text-gray-600 uppercase">
              Rep
            </th>
            <th class="p-3 text-xs text-left text-gray-600 uppercase">
              Score
            </th>
            <th class="p-3 text-xs text-left text-gray-600 uppercase">
              Leads
            </th>
            <th class="p-3 text-xs text-left text-gray-600 uppercase">
              QS
            </th>
            <th class="p-3 text-xs text-left text-gray-600 uppercase">
              Close
            </th>
            <th class="p-3 text-xs text-left text-gray-600 uppercase">
              Installs Scheduled
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Edit</span>
            </th>
          </tr>
          </thead>
          <tbody class="bg-white">
          <% @reps.each do |rep| %>
          <tr class="border-t border-gray-400 group bg-white hover:bg-gray-200">
            <td class="py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <%= image_tag avatar_url_for(rep), class: "h-10 h-10 rounded-full" %>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= rep.name %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= rep.accounts.impersonal&.first&.name %> - <%= rep.job_position_name %>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-3 whitespace-nowrap">
              <div class="text-sm text-gray-900">
                score
              </div>
              <div class="text-sm text-gray-500">
                <%= rep.job_position_name %>
              </div>
            </td>
            <td class="px-3 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  leads
                </span>
            </td>
            <td class="px-3 whitespace-nowrap text-sm text-gray-500">
              Qs
            </td>
            <td class="px-3 whitespace-nowrap text-sm text-gray-500">
              close
            </td>
            <td class="px-3 whitespace-nowrap text-sm text-gray-500">
              installs scheduled
            </td>
            <td class="px-3 whitespace-nowrap text-right text-sm font-medium">
              <!--<a href="#" class="text-indigo-600 hover:text-indigo-900">Edit</a>-->
            </td>
          </tr>
          <% end %>

          <!-- More rows... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
