<%= form_with(model: payout) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :pay_date %>
    <%= form.text_field :pay_date, class: "form-control flatpickr-capybara-selector-pay-date", data: { controller: :flatpickr, flatpickr_alt_input: true, flatpickr_alt_format: t("date.formats.long"), flatpickr_allow_input: true } %>
  </div>

  <div class="form-group">
    <%= form.label :pay_total %>
    <%= form.number_field :pay_total, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :approved_by_id %>
    <%= form.text_field :approved_by_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :paid_by_id %>
    <%= form.text_field :paid_by_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :paid_on %>
    <%= form.text_field :paid_on, class: "form-control flatpickr-capybara-selector-paid-on", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long"), flatpickr_allow_input: true } %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to t("delete"), form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
    <% end %>
  </div>
<% end %>
