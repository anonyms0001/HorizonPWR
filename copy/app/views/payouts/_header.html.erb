<!-- Header Card -->
<div class="flex flex-wrap bg-transparent sm:rounded-md">
    <!-- Header card contents  -->
    <div class="bg-white w-full mb-1 sm:mb-2 sm:rounded-t-md shadow-md p-6">
        <div class="flex flex-row justify-between">
            <div class="inline-flex items-center w-full h-9">
                <%= image_tag "mark.png", height: 20, width: 20, class: "w-9 h-full rounded-lg mr-4" %>
                <div class="inline-flex flex-col items-start h-full">
                    <div class="w-full mt-1 text-md font-semibold leading-none">
                      <%= link_to @payout.user.name, @payout.user, class:'text-gray-900' %>
                    </div>
                    <div class="w-full mt-1 text-xs leading-3 text-gray-400">
                      <%= date_mdy(@payout.pay_date) %>
                    </div>
                </div>
            </div>
          <%= render partial: 'shared/status_color', locals: { object: @payout } %>
        </div>
        <div class="flex flex-col mt-2 text-md">
            <div class="flex flex-row justify-between">
                <p>
                    Pay total: <%= number_to_currency(@payout.pay_total) %>
                </p>
                <p>
                </p>
            </div>
            <div class="flex flex-row justify-between">
                <p>
                    Approved on:
                  <span class="text-gray-400">
                    <%= date_mdy(@payout.approved_at) %>
                  </span>
                </p>
                <p>
                </p>
            </div>
            <div class="flex flex-row justify-between">
                <p>
                    Paid on:
                  <span class="text-gray-400">
                    <%= date_mdy(@payout.paid_at) %>
                  </span>
                </p>
                <p>
                </p>
            </div>

        </div>
    </div>
    <!-- End of Header card contents  -->
    <% if show_cards == true %>
        <!-- Card 1 contents  -->
        <div class="w-full sm:w-1/2 lg:w-1/4 pb-1 sm:pb-2 sm:pr-1 lg:pb-0 rounded-md">
            <div class="bg-white sm:rounded-r-lg lg:rounded-tr-lg lg:rounded-br-none lg:rounded-bl-md h-full shadow-lg">
                <div class="flex-col py-4 px-6">
                    <p class="mt-1 font-semibold leading-3 text-gray-900">Paid To</p>
                    <div class="inline-flex items-center mt-1">
                      <%= image_tag avatar_url_for(@payout.paid_by), height: 20, width: 20, class: "w-9 h-full rounded-full mr-4" %>
                        <div class="inline-flex flex-col justify-center">
                            <p class="text-sm font-semibold leading-none">
                              <%= link_to @payout.user.name, @payout.paid_by, class: 'text-gray-900'%>
                            </p>
                            <p class="text-xs leading-3 text-gray-400 mt-1">
                              <%= date_mdy(@payout.paid_at) %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of card 1 contents  -->
        <!-- Card 2 contents  -->
        <div class="w-full sm:w-1/2 lg:w-1/4 pb-1 sm:pb-2 sm:pl-1 lg:pr-1 lg:pb-0">
            <div class="bg-white sm:rounded-l-lg lg:rounded-b-none lg:rounded-t-lg h-full shadow-lg">
                <div class="flex-col py-4 px-6">
                    <p class="mt-1 font-semibold leading-3 text-gray-900">Approved By</p>
                    <% if @payout.approved_by %>
                      <div class="inline-flex items-center mt-1">
                        <%= image_tag avatar_url_for(@payout.approved_by), height: 20, width: 20, class: "w-9 h-full rounded-full mr-4" %>
                          <div class="inline-flex flex-col justify-center">
                              <p class="text-sm font-semibold leading-none text-gray-900">
                                <%= link_to @payout.approved_by.name, @payout.approved_by, class: 'text-gray-900'%>
                              </p>
                              <p class="text-xs leading-3 text-gray-400 mt-1">
                                <%= date_mdy(@payout.approved_at) %>
                              </p>
                          </div>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
        <!-- End of card 2 contents  -->
        <!-- Card 3 contents  -->
        <div class="w-full sm:w-1/2 lg:w-1/4 pb-1 sm:pb-0 sm:pr-1 lg:pl-1">
            <div class="bg-white sm:rounded-tr-lg lg:rounded-t-lg h-full sm:rounded-bl-md lg:rounded-bl-none shadow-lg">
                <div class="flex-col py-4 px-6">
                    <p class="mt-1 font-semibold leading-3 text-gray-900">Paid By</p>
                      <% if @payout.paid_by %>
                      <div class="inline-flex items-center mt-1">
                        <%= image_tag avatar_url_for(@payout.paid_by), height: 20, width: 20, class: "w-9 h-full rounded-full mr-4" %>
                        <div class="inline-flex flex-col justify-center">
                              <p class="text-sm font-semibold leading-none text-gray-900">
                                <%= link_to @payout.paid_by.name, @payout.approved_by, class: 'text-gray-900'%>
                              </p>
                              <p class="text-xs leading-3 text-gray-400 mt-1">
                                <%= date_mdy(@payout.paid_at) %>
                              </p>
                          </div>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
        <!-- End of card 3 contents  -->
        <!-- Card 4 contents  -->
        <div class="w-full sm:w-1/2 lg:w-1/4 sm:pl-1 g">
            <div class="bg-white sm:rounded-tl-lg h-full lg:rounded-br-md sm:rounded-br-md lg:rounded-bl-none sm:rounded-bl-none shadow-lg">
                <div class="flex-col py-4 px-6">
                    <p class="mt-1 font-semibold leading-3 text-gray-900">-</p>
                    <div class="inline-flex items-center mt-1">
                        <%= image_tag "mark.png", height: 20, width: 20, class: "w-9 h-full rounded-full mr-4" %>
                        <div class="inline-flex flex-col justify-center">
                            <p class="text-sm font-semibold leading-none text-gray-900">-</p>
                            <p class="text-xs leading-3 text-gray-400 mt-1">-</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End of card 4 contents  -->
    <% end %>
</div>
<!-- End of Header Card -->