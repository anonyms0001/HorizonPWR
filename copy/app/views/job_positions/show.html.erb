<div class="container mx-auto my-8 px-4">
  <!-- Main 3 column grid -->
  <main class="pb-8">
    <div class="mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Main 3 column grid -->
      <div class="grid grid-cols-1 gap-4 items-start lg:grid-cols-3 lg:gap-8">
        <!-- Left column -->
        <div class="grid grid-cols-1 gap-4 lg:col-span-3">
          <!-- Summary panel -->
          <section aria-labelledby="profile-overview-title">
            <div class="rounded-lg bg-white overflow-hidden shadow-lg">
              <div class="bg-white p-6 pt-4 flex lg:justify-between lg:flex-row flex-wrap sm:flex-nowrap">
                <div class="sm:flex sm:items-center sm:justify-between w-full">
                  <div class="sm:flex">
                    <div class="flex-shrink-0">
                    </div>
                    <div class="mt-4 text-center sm:mt-0 sm:pt-1 sm:text-left">
                      <div class="flex flex-row items-center">
                        <!-- Contact avatar -->
                        <div class="flex-shrink-0 h-10 w-10">
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
                          </svg>
                        </div>
                        <p class="text-xl font-bold text-gray-900 sm:text-2xl pl-4">
                          <%= @job_position.name %>
                        </p>
                        <%= link_to 'Edit', edit_job_position_path(@job_position), class: "btn btn-link" %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="flex w-full lg:justify-end md:justify-end justify-evenly">
                  <div class="mt-4 text-center sm:mt-0 sm:pt-1 sm:text-left">
                    <div class="flex flex-row items-center">
                      <div class="px-4 py-2 text-m font-medium border shadow rounded-full text-green-600 bg-green-100 border-green-400">
                        <%= @job_position.active ? 'Active' : 'Inactive' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <p class="text-sm font-medium text-gray-600 py-1 px-6 hidden">
                <span class="font-medium text-gray-900">
                    Inpsect:
                </span>
                <span class="text-sm font-medium text-gray-600 py-1">
                    <%#= @users.inspect %>
                  <%#= @users.length %>
                </span>
              </p>
              <div class="border-t border-gray-200 bg-gray-50 grid grid-cols-1 divide-y divide-gray-200 sm:grid-cols-4 sm:divide-y-0 sm:divide-x">
                <!--4 Bottom sections on top card-->
                <div class="px-6 py-5 text-sm text-center flex flex-nowrap sm:flex-wrap md:flex-wrap justify-between">
                  <div class="w-full">
                    <span class="text-gray-900 font-medium">
                     Created At:
                    </span>
                    <span class="text-gray-600">
                      <%= date_mdy(@job_position.created_at) %>
                    </span>
                  </div>
                </div>
                <div class="px-6 py-5 text-sm text-center flex flex-nowrap sm:flex-wrap md:flex-wrap justify-between">
                  <div class="w-full">
                    <span class="text-gray-900 font-medium">
                      Users:
                    </span>
                    <span class="text-gray-600">
                    <%= @users.length %>
                    </span>
                  </div>
                </div>
                <div class="px-6 py-5 text-sm text-center flex flex-nowrap sm:flex-wrap md:flex-wrap justify-between">
                  <div class="w-full">
                    <span class="text-gray-900 font-medium">
                    TBD:
                    </span>
                    <span class="text-gray-600">
                    TBD
                    </span>
                  </div>
                </div>
                <div class="px-6 py-5 text-sm text-center flex flex-nowrap sm:flex-wrap md:flex-wrap justify-between">
                  <div class="w-full">
                    <span class="text-gray-900 font-medium">
                    TBD:
                    </span>
                    <span class="text-gray-600">
                    TBD
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>

        <div class="grid grid-cols-1 gap-8 lg:col-span-2">
          <!-- Members panel -->
          <section>
            <div class="rounded-lg overflow-hidden shadow-lg bg-white">
              <div class="rounded-tl-lg rounded-tr-lg sm:rounded-tr-none relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-cyan-500">
                <p class="text-xl font-bold text-gray-900 sm:text-2xl">Users</p>
                <%# if @users.length > 0 %>
                <%# @users.each do |user| %>
                <!--                    <p><%#= user.name %></p>-->
                <%# end %>
                <%# else %>
                <!--                  <p>No Users</p>-->
                <%# end %>
                <% if @users.length > 0 %>
                  <table class="min-w-full divide-y divide-gray-200  mt-3">
                    <thead class="bg-gray-50">
                    <tr class="h-16">
                      <th scope="col" class="px-6 py-3 text-left text-m font-bold text-gray-900 uppercase tracking-wider">
                        Name
                      </th>
                      <th scope="col" class="px-6 py-3 text-left text-m font-bold text-gray-900 uppercase tracking-wider">
                        Start Date
                      </th>

                    </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100">
                    <% @users.each do |user| %>
                      <tr class="bg-white hover:bg-gray-200">
                        <td class="px-6 py-4 whitespace-nowrap">
                          <%= link_to user_path(user) do %>
                            <div class="flex items-center">
                              <div class="flex-shrink-0 h-10 w-10">
                                <%= image_tag avatar_url_for(user), class: "h-10 inline-block rounded-full mr-2" %>
                              </div>
                              <div class="ml-4">
                                <div class="text-m text-gray-900">
                                  <%= user.name %>
                                </div>
                                <div class="text-sm text-gray-500">
                                  <%= user.team_name %>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                          <%= link_to user_path(user) do %>
                            <div class="text-sm text-gray-900">
                              <%= date_mdy(user.created_at) %>
                            </div>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                <% else %>
                  <p>No Users</p>
                <% end %>
              </div>
            </div>
          </section>
          <section>
            <div class="rounded-lg overflow-hidden shadow-lg bg-white">
              <div class="rounded-tl-lg rounded-tr-lg sm:rounded-tr-none relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-cyan-500">
                <p class="text-xl font-bold text-gray-900 sm:text-2xl">Map</p>
              </div>
            </div>
          </section>
        </div>
        <!-- Right column -->
        <div class="grid grid-span-3 gap-4">
          <!--          Needs to be updated-->
          <section>
            <div class="rounded-lg overflow-hidden shadow-lg bg-white">
              <div class="rounded-tl-lg rounded-tr-lg sm:rounded-tr-none relative group bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-cyan-500">
                <p class="text-xl font-bold text-gray-900 sm:text-2xl pb-4">Permissions</p>
                <div class="flow-root ">
                  <p>Active Policy</p>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
</div>


