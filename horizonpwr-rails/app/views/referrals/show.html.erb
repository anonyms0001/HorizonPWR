<div class="my-8">
  <!-- Main 3 column grid -->
  <main class="mx-auto sm:px-6 lg:px-8">
    <!-- Main 3 column grid -->
    <div class="grid grid-cols-1 gap-4 lg:col-span-3">
      <!-- Header Card -->
      <section aria-labelledby="profile-overview-title">
        <%= render partial: "referrals/header", locals: { referral: @referral, show_cards: true } %>
      </section>
    </div>

    <div class="grid grid-cols-1 gap-4 items-start lg:grid-cols-3 lg:gap-4 mt-4">
      <div class="grid grid-cols-1 gap-4 lg:col-span-2 order-2 lg:order-1">
        <!-- Card 1 -->
        <section>
          <div class="sm:rounded-md shadow-lg bg-white p-6">
            <% if @referral.referral_contact_id.present? %>
              <p class="text-lg font-semibold leading-none text-gray-900 mb-4">
                This Referral is <%= link_to "Contact ##{ @referral.referral_contact_id }", @referral.referral_contact %>.
              </p>
              <p class="text-lg font-semibold leading-none text-gray-900 mb-4">
                A <%= link_to "Consultation", @consultation %> was scheduled.
              </p>
            <% else %>
              <p class="text-lg font-semibold leading-none text-gray-900 mb-4">
                Create a consultation
              </p>
              <%= render partial: "appointments/referral_contact_form", locals: {appointment: @appointment, address: @address, contact: @contact} %>
            <% end %>
          </div>
        </section>
        <!-- Card 2-->
        <section>
          <div class="sm:rounded-md shadow-lg bg-white p-6">
            <p class="text-lg font-semibold leading-none text-gray-900">
              Title
            </p>
            <p class="text-sm font-medium text-gray-600">
              A subtitle here
            </p>
          </div>
        </section>
      </div>

      <!-- Right column -->
      <!-- Card 3 -->
      <div class="grid grid-span-3 gap-4 order-1 lg:order-2">
        <section>
          <div class="sm:rounded-md bg-white shadow-lg p-6">
            <p class="text-lg font-semibold leading-none text-gray-900">
              Title
            </p>
          </div>
        </section>
      </div>
    </div>
  </main>
</div>