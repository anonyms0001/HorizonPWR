<table class="w-full ">
  <thead>
  <tr>
    <th class="p-3 text-xs text-left text-gray-600 uppercase">
      Closers
    </th>
    <th class="p-3 text-xs text-left text-gray-600 uppercase">
    </th>
    <th class="p-3 text-xs text-left text-gray-600 uppercase text-center">
      Quality Sits
    </th>
    <th class="p-3 text-xs text-left text-gray-600 uppercase text-center">
      Scheduled Installs
    </th>
  </tr>
  </thead>
  <tbody class="bg-white">
  <% @closers.each_with_index do |rep, index| %>
    <tr class="border-t border-gray-400 group bg-white hover:bg-gray-200">
      <td class="py-4 whitespace-nowrap">
        <!--             Leaderboard Position Number-->
        <p class="text-xl text-blue-500 font-semibold px-8">
          <%= (index + 1).ordinalize %>
        <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
               <%= rep.this_closers_week_points %> pts
          </span>
        </p>
      </td>
      <td class="py-4 whitespace-nowrap">
        <div class="flex items-center">
          <div class="flex-shrink-0 h-10 w-10">
            <%= image_tag avatar_url_for(rep), class: "h-10 h-10 rounded-full" %>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-900">
              <%= rep.name %>
            </div>
            <div class="text-sm text-gray-500">
              <%= rep.accounts.impersonal&.first&.name %> - <%= rep.job_position_name %>
            </div>
          </div>
        </div>
      </td>
      <td class="px-3 whitespace-nowrap text-sm text-gray-500 text-center">
        <%= rep.this_week_scheduled_with_quality_sits_count %>
      </td>
      <td class="px-3 whitespace-nowrap text-sm text-gray-500 text-center">
        <%= rep.this_week_scheduled_installs_count %>
      </td>
    </tr>
  <% end %>

  <!-- More rows... -->
  </tbody>
</table>
