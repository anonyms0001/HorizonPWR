<%= form_with(model: funding_payment, url: url) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :payment_type %>
    <%= form.select :payment_type, options_for_select(FundingPayment.payment_type_options, form.object.payment_type), { include_blank: "Selectâ€¦" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :received_at %>
    <%= form.text_field :received_at, class: "form-control flatpickr-capybara-selector-received-at", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="flex justify-between form-group">
    <%= form.button class: "btn btn-primary" %>

    <%# if form.object.persisted? && allowed_to?(:destroy?, form.object)%>
    <%#= link_to t("delete"), form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
    <%# end %>
  </div>
<% end %>
