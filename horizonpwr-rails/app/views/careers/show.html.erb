<div class="my-8">
  <!-- Main 3 column grid -->
  <main class="mx-auto sm:px-6 lg:px-8">
    <!-- Main 3 column grid -->
    <div class="grid grid-cols-1 gap-4 lg:col-span-3">
      <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="flex items-center">
          <li class="list-none">
            <div class="flex items-center">
              <!-- Heroicon name: solid/chevron-right -->
              <svg class="flex-shrink-0 h-5 w-5 text-gray-400 hidden" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
              <p class="text-xl font-bold mr-4 text-blue-500 hover:text-blue-700"><%= link_to "Careers", careers_path %></p>
            </div>
          </li>

          <li class="list-none">
            <div class="flex items-center">
              <!-- Heroicon name: solid/chevron-right -->
              <svg class="flex-shrink-0 h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
              </svg>
              <p class="ml-4 text-xl font-bold text-gray-500" aria-current="page">
                <%= @career.name %>
              </p>
            </div>
          </li>
        </ol>
        <div>
          <%= link_to 'Edit', edit_job_position_path(@career), class: "btn btn-link" %>
        </div>
      </nav>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="flex flex-row justify-between px-4 py-5 sm:px-6">
          <div class="">
            <h3 class="text-lg leading-6 font-medium text-gray-900">
              <%= @career.name %>
            </h3>
            <p class="mt-1 max-w-2xl text-sm text-gray-500">
              <%= @career.department&.name %>
            </p>
          </div>
          <p class="btn btn-primary">
            <%= link_to "Apply Now", new_applicant_path(:jp => @career.id), class: "text-white hover:text-white" %>
          </p>
        </div>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
          <p>
            <%= @career.description %>
          </p>
          <div class="w-full flex justify-end">
            <p class="btn btn-primary mt-4">
              <%= link_to "Apply Now", new_applicant_path(:jp => @career.id), class: "text-white hover:text-white" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>