<div class="container mx-auto my-8 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="flex justify-between items-center mb-4">
      <h1 class="h3"><%= link_to "Field Responses", field_responses_path %> > Field Response #<%= @field_response.id %></h1>
      <%= link_to t("edit"), edit_field_response_path(@field_response), class: "btn btn-link" %>
    </div>

    <div class="bg-white rounded shadow p-8">
      <div class="mb-4">
        <h5>Form response</h5>
        <%= @field_response.form_response %>
      </div>
      <div class="mb-4">
        <h5>Field config</h5>
        <%= @field_response.field_config %>
      </div>
      <div class="mb-4">
        <h5>User</h5>
        <%= @field_response.user %>
      </div>
      <div class="mb-4">
        <h5>Response</h5>
        <%= @field_response.response %>
      </div>
    </div>
  </div>
</div>
