<!--              <div class="p-6">-->
<!--                <p class="text-xl font-medium text-gray-900 sm:text-2xl">Fields</p>-->
<!--                <div class="mt-6">-->
                  <%# @field_config.each do |field_config| %>
<!--                    <div class="flex flex-row justify-between items-center rounded-lg bg-gray-50 p-4 mb-2 shadow">-->
<!--                      <div class="flex items-center ">-->
                        <%#= link_to "#{field_config.position}. #{field_config.name}", field_config, class: "text-gray-900 font-medium" %>
<!--                      </div>-->
<!--                    </div>-->
                  <%# end %>
<!--                </div>-->
<!--              </div>-->
<!--            </div>-->
<!--          </section>-->
<!--        </div>-->
      </div>
    </div>
  </main>
</div>
