<div class="text-left">

  <%= form_with(model: appointment) do |form| %>
    <%#= render "shared/error_messages", resource: form.object %>

    <div class="form-group">
      <%= form.label "Change the Closer to:" %>
      <%= form.select :scheduled_with_id,
                      options_from_collection_for_select(@closers, "id", "name", form.object.scheduled_with_id),
                      { include_blank: "Selectâ€¦", data: { confirm: "Are you sure you want to switch the closer for this appointment?" } },
                      { class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500", required: true }
      %>
    </div>

    <div class="form-group text-right">
      <%= form.button class: "btn btn-primary justify-center", data: { disable_with: 'Processing' } %>
    </div>
  <% end %>

</div>

