<%= form_with(model: appointment, url: appointment_appointment_held_path(appointment), method: :put, class: 'text-center mb-6') do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  <div class="flex flex-row justify-center mb-4 space-x-4">
    <span class="w-full">
      <%= form.radio_button :held, true, class: 'px-6 border-solid border-2 border-green-500 text-green-500 rounded peer hidden' %>
      <%= form.label(:held, value: true, class: "text-center px-6 border-solid border-2 border-green-500 text-green-500 rounded hover:bg-green-100 peer-checked:text-white peer-checked:bg-green-500 w-full") do %>
        <%= fa_icon 'thumbs-up', class: 'fas' %><br/>
        Held
      <% end %>
    </span>
    <span class="w-full">
      <%= form.radio_button :held, false, class: 'px-6 border-solid border-2 border-red-500 text-red-500 rounded peer hidden' %>
      <%= form.label(:held, value: false, class: "text-center px-6 border-solid border-2 border-red-500 text-red-500 rounded hover:bg-red-100 peer-checked:text-white peer-checked:bg-red-500 w-full") do %>
        <%= fa_icon 'thumbs-down', class: 'fas' %><br/>
        Not Held
      <% end %>
    </span>
  </div>

  <div class="form-group">
    <%= form.select :held_reason,
      options_for_select(Appointment.not_held_reasons, appointment.held_reason),
      { include_blank: "Reasonâ€¦" },
      { disabled: false, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" }
    %>
  </div>

  <%= form.button "Update Held Status", class: "btn btn-primary", data: { disable_with: 'Updating' } %>
<% end %>