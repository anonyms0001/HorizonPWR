<%= form_with(model: earning_type) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :display_name %>
    <%= form.text_field :display_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.check_box :preferred_financial_option, class: "form-checkbox" %>
    <%= form.label :preferred_financial_option, class: "inline" %>
  </div>

  <div class="form-group">
    <%= form.label :percent %>
    <%= form.number_field :percent, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :job_position_id %>
    <%= form.select :job_position_id, options_from_collection_for_select(JobPosition.active.sorted_by_name, :id, :name, selected: @job_position), {prompt: "Selectâ€¦"},  class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to t("delete"), form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
    <% end %>
  </div>
<% end %>
