<%= form_with(model: adjustment, url: url) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, step: '0.01', class: "form-control", placeholder: "Ex: +/- 123.00" %>
  </div>

  <div class="form-group">
    <%= form.check_box :pay_back, class: "form-checkbox" %>
    <%= form.label :pay_back, "Do we expect this to be paid back?", class: "inline" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "form-control", placeholder: "Why is this Adjustment being applied?" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to t("delete"), form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
    <% end %>
  </div>
<% end %>
