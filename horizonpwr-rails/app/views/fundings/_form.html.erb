<%= form_with(model: funding, url: url) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "form-control", placeholder: "$" %>
  </div>

  <div class="form-group">
    <%= form.label :finance_partner_id %>
    <%= form.select :finance_partner_id, options_from_collection_for_select(FinancePartner.order(name: :asc), :id, :name, selected: form.object.finance_partner&.id), { prompt: "Selectâ€¦" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :approved_at %>
    <%= form.text_field :approved_at, class: "form-control flatpickr-approved-at", data: { controller: :flatpickr, flatpickr_enable_time: true, flatpickr_alt_input: true, flatpickr_alt_format: t("time.formats.long") } %>
  </div>

  <div class="form-group">
    <%= form.label :denied_at %>
