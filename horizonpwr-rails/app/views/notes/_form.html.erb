<%= form_with(model: note, class: "note_form") do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.rich_text_area :body, class: "form-control", data: { controller: "mentions", mentions_target: "field" } %>
  </div>

  <%= form.hidden_field :notable_type %>
  <%= form.hidden_field :notable_id %>

  <!--  <div class="form-group"> -->
  <%#= form.label :account_id %>
  <%#= form.number_field :account_id, class: "form-control" %>
  <!--  </div> -->

  <!--  <div class="form-group"> -->
  <%#= form.label :installer_id %>
  <%#= form.number_field :installer_id, class: "form-control" %>
  <!--  </div> -->

  <%# if form.object.persisted? %>
  <!--  <div class="form-group flex justify-between"> -->
  <%#= link_to t("delete"), form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: t("are_you_sure") } %>
  <%# else %>
  <div class="form-group flex justify-end">
    <%# end %>
    <%= form.button class: "btn btn-primary bg-indigo-500", data: { disable_with: 'processing' } %>
  </div>
<% end %>

