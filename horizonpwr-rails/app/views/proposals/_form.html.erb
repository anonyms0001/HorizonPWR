<%= form_with(model: proposal) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  <% if allowed_to?(:custom_manage?, proposal) %>
    <div class="form-group">
      <%= form.label :completion_state %>
      <%= form.select :completion_state, options_for_select(Proposal.statuses, form.object.completion_state), {}, class: "rounded form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :aurora_project_id %>
      <%= form.text_field :aurora_project_id, class: "form-control" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :blocked %>
    <%= form.check_box :blocked, class: "form-checkbox" %>
  </div>

  <div class="form-group">
    <%= form.label :blocked_on %>
    <%= form.select :blocked_on, options_for_select(Proposal.blocked_choices, form.object.blocked_on), {}, class: "rounded form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :reason_incomplete %>
    <%= form.text_field :reason_incomplete, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>
  </div>
<% end %>
