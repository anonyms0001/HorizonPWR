<%= form_with(model: contact_appointment) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :appointment_id %>
    <%= form.text_field :appointment_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :contact_id %>
    <%= form.text_field :contact_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :project_id %>
    <%= form.text_field :project_id, class: "form-control" %>
  </div>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
